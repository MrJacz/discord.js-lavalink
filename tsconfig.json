{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true,
		"incremental": true,
		"lib": ["esnext",],
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"outDir": "./dist",
		"pretty": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"target": "esnext",
		"types": ["node"]
	},
	"exclude": [
		"node_modules",
		"example",
		"scripts"
	],
	"include": [
		"src/**/*"
	]
}